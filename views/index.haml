!!! 5
%html{ :lang => 'en', :xmlns => 'http://www.w3.org/1999/xhtml', 'xml:lang' => 'en'}
  %head
    %title= @title

    %meta{ 'http-equiv' => 'Content-Type', 'content' => 'text/html; charset=utf-8' }/

    =# %link{ :rel => 'shortcut icon', :href => '/images/favicon.ico' }/

    %script{ :type => 'text/javascript', :src => 'http://assets.ravinggenius.com/js?modernizr=1.1&jquery=1.4&jquery_plugins=cookie-1.0' }
    %style{ :type => 'text/css', :media => 'all'} @import url('http://assets.ravinggenius.com/css?html5reset=1.4');

    %style{ :type => 'text/css', :media => 'all'} @import url('/styles/application.css');
    %script{ :type => 'text/javascript', :src => '/scripts/application.js' }

    = partial :tracking_google, :google_analytics_tracking_code => 'UA-13210830-2'

  %body
    %header#branding
      %span.h= @site_name

    %section#content
      %p#answer= @answer
      %p#comment= @comment
      %div#timer.time
        %span.time_segment.hour><
          = '%03d'.%(@countdown[:hour])
        = ':'
        %span.time_segment.minute><
          = '%02d'.%(@countdown[:minute])
        = ':'
        %span.time_segment.second><
          = '%02d'.%(@countdown[:second])

    %section#timezone_picker
      %form{ :action => '/timezone', :method => 'post' }
        %fieldset
          %legend set timezone
          %div
            %select{ :name => 'timezone' }
              - @timezones.each do |tz|
                %option{ :value => tz, :selected => tz == @current_timezone }= tz
          %div
            %button{ :type => 'submit' } set

    %footer#credits
      %small#copyright
        &copy;
        %a{ :href => 'http://www.ravinggenius.com/' } Thomas Ingram

    = partial :tracking_woopra
